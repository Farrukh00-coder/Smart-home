<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White"
    tools:context=".ElectricityControl">


<TextView
    android:id="@+id/id_TvelecLabel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/Electricity"
    android:gravity="center"
    android:textSize="40dp"
        android:layout_marginTop="75dp"
    android:textColor="@android:color/black"
    />



    <androidx.cardview.widget.CardView
        android:layout_below="@+id/id_TvelecLabel"
        android:layout_marginTop="50dp"
        android:id="@+id/id_cardview"
        style="@style/CardView.Light"
        app:cardBackgroundColor="@color/ThemeBlue"
        app:cardCornerRadius="15dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        >
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 >
                 <TextView
                     android:id="@+id/id_fridgeTV"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/Fridge"
                     android:textSize="25dp"
                     android:textColor="@android:color/black"
                     android:gravity="left"
                     android:onClick="Fridge"
                     />

             </LinearLayout>


             <LinearLayout
                 android:id="@+id/expanable_view"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:visibility="visible"
                 android:orientation="vertical">

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Room: Kitchen "
                     android:textSize="17dp"
                     />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Temepature : 3Â°C "
                     android:textSize="17dp"
                     />

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Power Consumption :  180W/Day"
                     android:textSize="17dp"
                     />
                 <androidx.appcompat.widget.SwitchCompat
                     android:id="@+id/switcj_fridgeCtrl"
                     android:layout_width="200dp"
                     android:layout_marginLeft="75dp"
                     android:layout_height="wrap_content"
                     android:layout_below="@id/sw_Door1"
                     android:text="ON/OFF"
                     android:textSize="22dp"
                     android:thumb="@drawable/thumb"
                     app:track="@drawable/track"
                     android:background="@drawable/edit_box"

                     />



             </LinearLayout>


         </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_backArrow"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_cardview"
        android:layout_gravity="left|center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="290dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="#271F1E"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
        android:textColor="#FFFFFF" />






</RelativeLayout>